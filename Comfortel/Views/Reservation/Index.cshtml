
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reservaciones</h2>
<div ng-controller="ListController">
    <div ng-show="Section == ''">
        <div><input id="input1" ng-model="jeje" /></div>
        <p>{{jeje}}</p>
        <div class="col-md-12"><button class="btn btn-primary" ng-click="Add()">Agregar</button></div>

        <div class="col-md-8">
            <table class="table table-striped table-hover" id="tabla1">
                <thead>
                    <tr>
                        <th>Id habitación</th>
                        <th>Id huésped</th>
                        <th>Fecha inicio</th>
                        <th>Fecha fin</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="u in items">
                        <td>{{u.IdRoom}}</td>
                        <td>{{u.IdGuest}}</td>
                        <td>{{u.DateBeg | date:'dd/MM/yyyy'}}</td>
                        <td>{{u.DateEnd | date:'dd/MM/yyyy'}}</td>
                        <td><button title="Editar" class="btn btn-info" ng-click="Edit(u); $event.stopPropagation()"><span class="fa fa-edit"></span></button></td>
                        <td><button title="Eliminar" class="btn btn-danger" ng-click="Delete(u); $event.stopPropagation()"><span class="fa fa-trash-alt"></span></button></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <pre>Reservaciones encontradas: {{items | json}}</pre>

    </div>
</div>
<div ng-controller="AddController" ng-show="Section == 'AddSection'">
    @Html.Partial("ReservationForm")
</div>
<div ng-controller="EditController" ng-show="Section == 'EditSection'">
    @Html.Partial("ReservationForm")
</div>

@section scripts{
    <script src="~/Scripts/Controllers/ReservationController.js"></script>
}